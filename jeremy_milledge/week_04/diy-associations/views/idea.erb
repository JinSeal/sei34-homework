<div class="idea-header">
  <img class="icon-small" src="/img/bulb-icon.png" alt="Bulb icon">
  <h2 class="idea-single">idea</h2>
</div>
<div class="<%= @idea.category %> container">
  <article class="single">

      <h1><%= @idea.title %></h1>



    <div class="info">

      <div class="meta">
        <img src="/img/tag-icon.png" class="icon-small">
        <p><%= @idea.category %></p>

        <img src="/img/date-icon.png" class="icon-small">
        <p><%= @date %></p>
      </div>

      <div class="controls">
        <a href="<%= @idea.id %>/edit" alt="Edit this idea"><img src="/img/edit-icon.png" class="icon-small"><p>edit</p></a>

        <a href="<%= @idea.id %>/delete_check" alt="Delete this idea"><img src="/img/delete-icon.png" class="icon-small"><p>delete</p></a>

      </div>

    </div>

    <h4>Description</h4>
    <p class="copy"><%= @idea.description %></p>
    <div class="related">

      <h4>Related Links</h4>

      <% unless @idea.links.empty? %>
        <% @idea.links.each do |i| %>
          <p>
            <a href="<%= i.url %>" target="_blank" alt="Link to <%= i.name %>"><%= i.name %> [<%= i.url.size > 40 ? i.url[0..40]+ "..." : i.url %>]</a>
            <a href="/link/<%= i.id %>/edit/related-to/<%= @idea.id %>" alt="Edit <%= i.name %>">edit</a>
            <a href="/link/<%= i.id %>/delete/related-to/<%= @idea.id %>" alt="Delete <%= i.name %>">delete</a>
          </p>
        <% end %>
      <% else %>
        <p>no related links added yet. <a href="/link/new/related-to/<%= @idea.id %>" alt="add a new link">add one?</a></p>
      <% end %>
    </div>
  </article>
</div>
